{
  "name": "permisisve-nextjs-template",
  "private": true,
  "description": "NextJs example using permissive config",
  "license": "MIT",
  "author": "Kataware <contact@kataware.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/katawaredev/permisisve-nextjs-template.git"
  },
  "bugs": {
    "url": "https://github.com/katawaredev/permisisve-nextjs-template/issues"
  },
  "version": "1.0.0",
  "engines": {
    "node": ">=12.18.0"
  },
  "scripts": {
    "dev": "next",
    "debug": "node --inspect ./node_modules/next/dist/bin/next",
    "build": "next build",
    "export": "next export",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "profile": "run-s 'build -- --profile' start",
    "prod": "run-s build start",
    "docker:build": "docker build -t permissive-next-app .",
    "docker:run": "docker run --rm -it -p 3000:3000 permissive-next-app",
    "lint:type": "tsc",
    "lint:code": "eslint --fix .",
    "lint:style": "stylelint '**/*.{css,js,jsx,tsx}'",
    "lint:markdown": "markdownlint --fix '**/*.md'",
    "lint": "run-s -c lint:type lint:code lint:style lint:markdown",
    "format": "prettier --loglevel silent --write .",
    "test:coverage": "jest --coverage",
    "test:code": "jest",
    "test:e2e": "start-test prod 3000 'TZ=UTC cypress run'",
    "test": "run-s -c test:code test:e2e",
    "e2e": "start-test prod 3000 'TZ=UTC cypress open'"
  },
  "dependencies": {
    "next": "latest",
    "next-seo": "^4.17.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^3.1.0"
  },
  "devDependencies": {
    "@47ng/check-env": "^2.0.1",
    "@babel/core": "^7.12.9",
    "@commitlint/cli": "^11.0.0",
    "@cypress/browserify-preprocessor": "^3.0.1",
    "@next/bundle-analyzer": "^10.0.3",
    "@testing-library/cypress": "^7.0.2",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/testing-library__cypress": "^5.0.8",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-preset-permissive": "latest",
    "browserslist-config-permissive": "latest",
    "cross-env": "^7.0.2",
    "cypress": "^6.0.1",
    "cypress-audit": "^0.2.3",
    "eslint": "^7.14.0",
    "eslint-config-permissive": "latest",
    "git-config-permissive": "latest",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-preset-permissive": "latest",
    "lint-staged": "^10.5.2",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.25.0",
    "markdownlint-config-permissive": "latest",
    "next-compose-plugins": "^2.2.1",
    "next-pwa": "^3.1.5",
    "next-svgr": "^0.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "postcss-preset-permissive": "latest",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.0",
    "start-server-and-test": "^1.11.6",
    "stylelint": "^13.8.0",
    "stylelint-config-permissive": "latest",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2",
    "typescript-config-permissive": "latest"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
